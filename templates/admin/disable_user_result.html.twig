{% extends 'base.html.twig' %}

{% block title %}Disable User{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            {% if  action_done %}
                <div class="alert alert-success" role="alert">{{ message }}</div>
            {% elseif action_failed %}
                <div class="alert alert-danger" role="alert">{{ message }}</div>
            {% endif %}
        </div>
    </div>
{% endblock %}